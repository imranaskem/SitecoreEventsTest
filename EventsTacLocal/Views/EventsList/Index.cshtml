@using TAC.Utils.Helpers

@model EventsTacLocal.Models.EventsList

<div class="content-list newslist">
    <ol class="media-list">
        @foreach (var item in Model.Events)
        {
            <li class="media media-align-middle">
                <div class="media-left">
                    <a href="@item.Url">@item.EventImage</a>
                </div>
                <div class="media-body">
                    <h3 class="media-heading">
                        <a href="@item.Url">@item.ContentHeading</a>
                    </h3>
                    <div class="description">
                        <p>@item.ContentIntro</p>
                    </div>                
                </div>
                <div class="metadata well">@item.EventStartDate</div>
            </li>
        }
    </ol>
</div>

@Html.Pager(Model.PageSize, Model.TotalResultCount)
